{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <main class="min-h-screen bg-slate-100 py-16">
        <section class="mx-auto w-full max-w-5xl rounded-2xl bg-white p-10 shadow-xl ring-1 ring-slate-200">
            <header class="mb-10 flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                <div>
                    <p class="text-sm uppercase tracking-[0.3em] text-slate-400">Clients</p>
                    <h1 class="mt-2 text-3xl font-semibold text-slate-900">Overview</h1>
                    <p class="mt-1 text-sm text-slate-500">Browse existing clients or create a new one.</p>
                </div>
                <a
                    href="{{ path('app_client_new') }}"
                    class="inline-flex items-center justify-center rounded-lg bg-slate-900 px-5 py-3 text-base font-semibold text-white shadow-lg shadow-slate-900/30 transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-500"
                >
                    + New client
                </a>
            </header>

            {% if clients is empty %}
                <p class="rounded-xl border border-dashed border-slate-300 px-6 py-10 text-center text-slate-500">
                    No clients yet. Be the first to
                    <a href="{{ path('app_client_new') }}" class="font-semibold text-slate-900 underline decoration-slate-300 decoration-2 hover:decoration-slate-500">
                        create one
                    </a>.
                </p>
            {% else %}
                <ul class="grid gap-6 md:grid-cols-2">
                    {% for client in clients %}
                        <li class="rounded-2xl border border-slate-200 p-6 shadow-sm transition hover:shadow-lg">
                            <div class="flex items-start justify-between gap-4">
                                <div>
                                    <p class="text-xs uppercase tracking-[0.3em] text-slate-400">Client #{{ client.id }}</p>
                                    <a href="{{ path('app_client_show', {'id': client.id}) }}" class="mt-2 block text-xl font-semibold text-slate-900">
                                        {{ client.name ?? 'Unnamed client' }}
                                    </a>
                                    <p class="text-sm text-slate-500">{{ client.address ?? 'Address TBD' }}</p>
                                </div>
                                <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">
                                    {{ client.serviceProviders|length }} providers
                                </span>
                            </div>

                            <dl class="mt-4 space-y-2 text-sm text-slate-600">
                                <div class="flex justify-between">
                                    <dt class="font-medium text-slate-500">City</dt>
                                    <dd class="text-right text-slate-800">{{ client.city ?? '—' }}</dd>
                                </div>
                                <div class="flex justify-between">
                                    <dt class="font-medium text-slate-500">Country</dt>
                                    <dd class="text-right text-slate-800">{{ client.country ?? '—' }}</dd>
                                </div>
                                <div class="flex justify-between">
                                    <dt class="font-medium text-slate-500">Full address</dt>
                                    <dd class="text-right text-slate-800 text-wrap">{{ client.fullAddress ?? '—' }}</dd>
                                </div>
                            </dl>

                            <div class="mt-6">
                                <h3 class="text-xs uppercase tracking-[0.3em] text-slate-400">Schedule</h3>
                                {% if client.schedule is not empty %}
                                    <ul class="mt-3 flex flex-wrap gap-2 text-xs font-semibold text-slate-700">
                                        {% for day in client.schedule %}
                                            <li class="rounded-xl bg-slate-100 px-3 py-1">{{ day.value|slice(0, 3)|upper }}</li>
                                        {% endfor %}
                                    </ul>
                                {% else %}
                                    <p class="mt-2 text-sm text-slate-500">No schedule defined yet.</p>
                                {% endif %}
                            </div>

                            <div class="mt-8">
                                <a
                                    href="{{ path('app_client_show', {'id': client.id}) }}"
                                    class="inline-flex items-center text-sm font-semibold text-slate-900 hover:underline"
                                >
                                    View details →
                                </a>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </section>
    </main>
{% endblock %}


