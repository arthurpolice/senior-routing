{% extends 'base.html.twig' %}

{% block title %}{{ serviceProvider.name ?? 'Service Provider' }} Route{% endblock %}

{% block body %}
    <main class="min-h-screen bg-slate-100 py-16">
        {% set carTrips = route.carTrips ?? [] %}
        {% set deliveries = route.deliveries ?? [] %}
        {% set today = "now"|date('Y-m-d') %}

        <section class="mx-auto w-full max-w-6xl rounded-2xl bg-white p-10 shadow-xl ring-1 ring-slate-200">
            <header class="mb-10 flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                <div>
                    <p class="text-sm uppercase tracking-[0.3em] text-slate-400">Service Provider</p>
                    <h1 class="mt-2 text-3xl font-semibold text-slate-900">
                        {{ serviceProvider.name ?? 'Unnamed provider' }}
                    </h1>
                    <p class="mt-1 text-sm text-slate-500">ID #{{ serviceProvider.id }}</p>
                </div>
                <div class="flex flex-wrap gap-3">
                    <a
                        href="{{ path('app_service_provider_show', { id: serviceProvider.id }) }}"
                        class="inline-flex items-center justify-center rounded-lg border border-slate-300 px-4 py-2 text-sm font-medium text-slate-700 transition hover:bg-slate-50 focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-500"
                    >
                        ← Provider details
                    </a>
                    <a
                        href="{{ path('app_service_provider') }}"
                        class="inline-flex items-center justify-center rounded-lg bg-slate-900 px-4 py-2 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-500"
                    >
                        Back to list
                    </a>
                </div>
            </header>

            <div class="grid gap-6 md:grid-cols-3">
                <div class="rounded-2xl border border-slate-200 p-6 shadow-sm md:col-span-2">
                    <h2 class="text-lg font-semibold text-slate-900">Route overview</h2>
                    <dl class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-3 text-sm text-slate-600">
                        <div class="rounded-xl border border-slate-100 p-4">
                            <dt class="text-xs font-semibold uppercase tracking-wide text-slate-400">Trips</dt>
                            <dd class="mt-2 text-2xl font-semibold text-slate-900">{{ carTrips|length }}</dd>
                        </div>
                        <div class="rounded-xl border border-slate-100 p-4">
                            <dt class="text-xs font-semibold uppercase tracking-wide text-slate-400">Deliveries</dt>
                            <dd class="mt-2 text-2xl font-semibold text-slate-900">{{ deliveries|length }}</dd>
                        </div>
                        <div class="rounded-xl border border-slate-100 p-4">
                            <dt class="text-xs font-semibold uppercase tracking-wide text-slate-400">Planned for</dt>
                            <dd class="mt-2 text-sm font-semibold text-slate-900">{{ today }}</dd>
                        </div>
                    </dl>
                </div>
                <div class="rounded-2xl border border-slate-200 p-6 shadow-sm">
                    <h2 class="text-lg font-semibold text-slate-900">Start / End</h2>
                    <p class="mt-2 text-sm text-slate-700">{{ serviceProvider.address ?? '—' }}</p>
                    <p class="text-sm text-slate-500">{{ serviceProvider.city ?? '—' }}, {{ serviceProvider.country ?? '—' }}</p>
                </div>
            </div>

            <section class="mt-12">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm uppercase tracking-[0.3em] text-slate-400">Routes</p>
                        <h2 class="mt-2 text-2xl font-semibold text-slate-900">Driver trips & stops</h2>
                    </div>
                </div>

                {% if carTrips is empty %}
                    <p class="mt-6 rounded-xl border border-dashed border-slate-300 px-6 py-10 text-center text-slate-500">
                        No routes were generated for today. Make sure there are deliveries scheduled.
                    </p>
                {% else %}
                    <div class="mt-6 space-y-6">
                        {% for trip in carTrips %}
                            {% set durationMinutes = (trip.routeDurationInSeconds / 60)|round(0, 'floor') %}
                            {% set durationHours = (durationMinutes / 60)|round(0, 'floor') %}
                            {% set durationRemainderMinutes = durationMinutes - (durationHours * 60) %}
                            <div class="rounded-2xl border border-slate-200 bg-white shadow-sm">
                                <div class="flex flex-col gap-3 border-b border-slate-100 px-6 py-4 sm:flex-row sm:items-center sm:justify-between">
                                    <div>
                                        <p class="text-xs uppercase tracking-[0.3em] text-slate-400">Car trip #{{ loop.index }}</p>
                                        <h3 class="text-xl font-semibold text-slate-900">{{ trip.orderedAddresses|length }} stops</h3>
                                    </div>
                                    <div class="flex flex-wrap items-center gap-3 text-sm text-slate-700">
                                        <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 font-medium text-slate-800">
                                            Drive time: {{ durationHours ? durationHours ~ 'h ' : '' }}{{ durationRemainderMinutes }}m
                                        </span>
                                        <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 font-medium text-slate-800">
                                            Addresses: {{ trip.orderedAddresses|length }}
                                        </span>
                                    </div>
                                </div>

                                <div class="divide-y divide-slate-100">
                                    {% for address in trip.orderedAddresses %}
                                        {% set ordersAtAddress = deliveriesByAddress[address] ?? [] %}
                                        <div class="px-6 py-5">
                                            <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
                                                <div>
                                                    <p class="text-xs uppercase tracking-[0.3em] text-slate-400">Stop {{ loop.index }}</p>
                                                    <p class="text-base font-semibold text-slate-900">{{ address }}</p>
                                                </div>
                                                <div class="text-sm text-slate-600">
                                                    {{ ordersAtAddress|length }} delivery{{ ordersAtAddress|length == 1 ? '' : 'ies' }} at this address
                                                </div>
                                            </div>

                                            {% if ordersAtAddress is empty %}
                                                <p class="mt-3 rounded-lg border border-dashed border-slate-200 px-4 py-3 text-sm text-slate-500">
                                                    No orders mapped to this address.
                                                </p>
                                            {% else %}
                                                <div class="mt-4 overflow-hidden rounded-xl border border-slate-200">
                                                    <table class="min-w-full divide-y divide-slate-200 text-left text-sm text-slate-700">
                                                        <thead class="bg-slate-50 text-xs uppercase tracking-wider text-slate-500">
                                                            <tr>
                                                                <th class="px-4 py-3">Order #</th>
                                                                <th class="px-4 py-3">Client</th>
                                                                <th class="px-4 py-3">Meals</th>
                                                                <th class="px-4 py-3">Consumption date</th>
                                                                <th class="px-4 py-3">Order placed</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody class="divide-y divide-slate-100 bg-white">
                                                            {% for order in ordersAtAddress %}
                                                                <tr>
                                                                    <td class="px-4 py-3 font-medium text-slate-900">#{{ order.id }}</td>
                                                                    <td class="px-4 py-3 text-slate-700">{{ order.client.name ?? 'Unknown client' }}</td>
                                                                    <td class="px-4 py-3 text-slate-700">{{ order.orderSize ?? '—' }}</td>
                                                                    <td class="px-4 py-3 text-slate-700">{{ order.date ? order.date|date('Y-m-d H:i') : '—' }}</td>
                                                                    <td class="px-4 py-3 text-slate-700">{{ order.createdAt ? order.createdAt|date('Y-m-d H:i') : '—' }}</td>
                                                                </tr>
                                                            {% endfor %}
                                                        </tbody>
                                                    </table>
                                                </div>
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </section>
        </section>
    </main>
{% endblock %}