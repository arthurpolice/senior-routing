{% extends 'base.html.twig' %}

{% block title %}Create Service Provider{% endblock %}

{% block body %}
    <main class="min-h-screen bg-slate-100 py-16">
        <section class="mx-auto w-full max-w-2xl rounded-2xl bg-white p-10 shadow-xl ring-1 ring-slate-200">
            <header class="mb-8 text-center">
                <p class="text-sm uppercase tracking-[0.3em] text-slate-400">Service Providers</p>
                <h1 class="mt-3 text-3xl font-semibold text-slate-900">Create a new provider</h1>
                <p class="mt-2 text-sm text-slate-500">Fill in the provider details below and submit the form.</p>
            </header>

            {% for message in app.flashes('success') %}
                <p class="mb-6 rounded-lg bg-emerald-50 px-4 py-3 text-sm font-medium text-emerald-800">{{ message }}</p>
            {% endfor %}

            {{ form_start(form, { attr: { class: 'space-y-6' } }) }}
                {{ form_row(form.name, {
                    label: 'Name',
                    row_attr: { class: 'space-y-2' },
                    label_attr: { class: 'block text-sm font-medium text-slate-700' },
                    attr: {
                        class: 'mt-2 w-full rounded-lg border border-slate-200 px-4 py-2 text-base text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-2 focus:ring-slate-400'
                    }
                }) }}

                {{ form_row(form.address, {
                    label: 'Address',
                    row_attr: { class: 'space-y-2' },
                    label_attr: { class: 'block text-sm font-medium text-slate-700' },
                    attr: {
                        class: 'mt-2 w-full rounded-lg border border-slate-200 px-4 py-2 text-base text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-2 focus:ring-slate-400'
                    }
                }) }}

                {{ form_row(form.city, {
                    label: 'City',
                    row_attr: { class: 'space-y-2' },
                    label_attr: { class: 'block text-sm font-medium text-slate-700' },
                    attr: {
                        class: 'mt-2 w-full rounded-lg border border-slate-200 px-4 py-2 text-base text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-2 focus:ring-slate-400'
                    }
                }) }}

                {{ form_row(form.country, {
                    label: 'Country',
                    row_attr: { class: 'space-y-2' },
                    label_attr: { class: 'block text-sm font-medium text-slate-700' },
                    attr: {
                        class: 'mt-2 w-full rounded-lg border border-slate-200 px-4 py-2 text-base text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-2 focus:ring-slate-400'
                    }
                }) }}

                <div>
                    <button
                        type="submit"
                        class="inline-flex w-full items-center justify-center rounded-lg bg-slate-900 px-4 py-3 text-base font-semibold text-white shadow-lg shadow-slate-900/30 transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-500"
                    >
                        Create service provider
                    </button>
                </div>

                {{ form_rest(form) }}
            {{ form_end(form) }}
        </section>
    </main>
{% endblock %}

