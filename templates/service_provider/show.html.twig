{% extends 'base.html.twig' %}

{% block title %}{{ serviceProvider.name ?? 'Service Provider' }}{% endblock %}

{% block body %}
    <main class="min-h-screen bg-slate-100 py-16">
        <section class="mx-auto w-full max-w-5xl rounded-2xl bg-white p-10 shadow-xl ring-1 ring-slate-200">
            <header class="mb-10 flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                <div>
                    <p class="text-sm uppercase tracking-[0.3em] text-slate-400">Service Provider</p>
                    <h1 class="mt-2 text-3xl font-semibold text-slate-900">
                        {{ serviceProvider.name ?? 'Unnamed provider' }}
                    </h1>
                    <p class="mt-1 text-sm text-slate-500">ID #{{ serviceProvider.id }}</p>
                </div>
                <div class="flex flex-wrap gap-3">
                    <a
                        href="{{ path('app_service_provider_route_show', { id: serviceProvider.id }) }}"
                        class="inline-flex items-center justify-center rounded-lg bg-slate-900 px-5 py-3 text-base font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-500"
                    >
                        View today’s routes
                    </a>
                    <a
                        href="{{ path('app_service_provider') }}"
                        class="inline-flex items-center justify-center rounded-lg border border-slate-300 px-5 py-3 text-base font-medium text-slate-700 transition hover:bg-slate-50 focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-500"
                    >
                        ← Back to list
                    </a>
                </div>
            </header>

            <div class="grid gap-6 md:grid-cols-3">
                <div class="rounded-2xl border border-slate-200 p-6 shadow-sm md:col-span-2">
                    <h2 class="text-lg font-semibold text-slate-900">Contact details</h2>
                    <dl class="mt-4 space-y-3 text-sm text-slate-600">
                        <div class="flex justify-between">
                            <dt class="font-medium text-slate-500">Address</dt>
                            <dd class="text-right text-slate-900">{{ serviceProvider.address ?? '—' }}</dd>
                        </div>
                        <div class="flex justify-between">
                            <dt class="font-medium text-slate-500">City</dt>
                            <dd class="text-right text-slate-900">{{ serviceProvider.city ?? '—' }}</dd>
                        </div>
                        <div class="flex justify-between">
                            <dt class="font-medium text-slate-500">Country</dt>
                            <dd class="text-right text-slate-900">{{ serviceProvider.country ?? '—' }}</dd>
                        </div>
                    </dl>
                </div>

                <div class="rounded-2xl border border-slate-200 p-6 shadow-sm">
                    <h2 class="text-lg font-semibold text-slate-900">Stats</h2>
                    <p class="mt-4 text-4xl font-semibold text-slate-900">
                        {{ serviceProvider.clients|length }}
                    </p>
                    <p class="text-sm text-slate-500">Active client{{ serviceProvider.clients|length == 1 ? '' : 's' }}</p>
                </div>
            </div>

            <section class="mt-12">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm uppercase tracking-[0.3em] text-slate-400">Clients</p>
                        <h2 class="mt-2 text-2xl font-semibold text-slate-900">Subscribed clients</h2>
                    </div>
                    <a
                        href="{{ path('app_client_new') }}"
                        class="inline-flex items-center justify-center rounded-lg bg-slate-900 px-4 py-2 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-500"
                    >
                        + Add client
                    </a>
                </div>

                {% if serviceProvider.clients is empty %}
                    <p class="mt-6 rounded-xl border border-dashed border-slate-300 px-6 py-10 text-center text-slate-500">
                        No clients are associated with this provider yet.
                    </p>
                {% else %}
                    <div class="mt-6 overflow-hidden rounded-2xl border border-slate-200 shadow-sm">
                        <table class="min-w-full divide-y divide-slate-200 text-left text-sm text-slate-700">
                            <thead class="bg-slate-50 text-xs uppercase tracking-wider text-slate-500">
                                <tr>
                                    <th class="px-6 py-3">Client</th>
                                    <th class="px-6 py-3">Location</th>
                                    <th class="px-6 py-3">Schedule</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-slate-100 bg-white">
                                {% for client in serviceProvider.clients %}
                                    <tr>
                                        <td class="px-6 py-4 font-medium text-slate-900">
                                            {{ client.name ?? 'Unnamed client' }}
                                        </td>
                                        <td class="px-6 py-4 text-slate-600">
                                            {{ client.address ?? '—' }}<br>
                                            <span class="text-xs text-slate-400">
                                                {{ client.city ?? '—' }}, {{ client.country ?? '—' }}
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 text-slate-600">
                                            {% if client.schedule is empty %}
                                                <span class="text-slate-400">No schedule</span>
                                            {% else %}
                                                <div class="flex flex-wrap gap-2">
                                                    {% for day in client.schedule %}
                                                        <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-700">
                                                            {{ day.value|capitalize }}
                                                        </span>
                                                    {% endfor %}
                                                </div>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </section>
        </section>
    </main>
{% endblock %}

