{% extends 'base.html.twig' %}

{% block title %}Welcome{% endblock %}

{% block body %}
    <main class="flex min-h-screen items-center justify-center bg-slate-100 px-6 py-16">
        <section class="w-full max-w-xl flex flex-col items-center justify-center gap-5 rounded-3xl bg-white p-10 text-center shadow-2xl ring-1 ring-slate-200">
            <p class="text-sm uppercase tracking-[0.3em] text-slate-400">Routing dashboard</p>
            <h1 class="mt-3 text-3xl font-semibold text-slate-900">What would you like to manage?</h1>
            <p class="mt-2 text-sm text-slate-500">Choose a section below to view or create records.</p>

            <div class="mt-10 grid gap-4 sm:grid-cols-2">
                <a
                    href="{{ path('app_service_provider') }}"
                    class="rounded-2xl border border-slate-200 px-6 py-10 text-left shadow-sm transition hover:-translate-y-0.5 hover:border-slate-900 hover:shadow-lg focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-500"
                >
                    <p class="text-xs uppercase tracking-[0.3em] text-slate-400">Service Providers</p>
                    <p class="mt-2 text-lg font-semibold text-slate-900">View & manage providers</p>
                </a>
                <a
                    href="{{ path('app_client') }}"
                    class="rounded-2xl border border-slate-200 px-6 py-10 text-left shadow-sm transition hover:-translate-y-0.5 hover:border-slate-900 hover:shadow-lg focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-500"
                >
                    <p class="text-xs uppercase tracking-[0.3em] text-slate-400">Clients</p>
                    <p class="mt-2 text-lg font-semibold text-slate-900">View delivery clients</p>
                </a>
            </div>
        </section>
    </main>
{% endblock %}


